<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SloppyJoe.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="item1"
                FontSize="18"
                Text="item #1" />
            <Label
                x:Name="price1"
                Grid.Column="1"
                FontSize="18"
                HorizontalOptions="End"
                Text="price #1" />
            <Label
                x:Name="item2"
                Grid.Row="1"
                FontSize="18"
                Text="item #2" />
            <Label
                x:Name="price2"
                Grid.Row="1"
                Grid.Column="1"
                FontSize="18"
                HorizontalOptions="End"
                Text="price #2" />
            <Label
                x:Name="item3"
                Grid.Row="2"
                FontSize="18"
                Text="item #3" />
            <Label
                x:Name="price3"
                Grid.Row="2"
                Grid.Column="1"
                FontSize="18"
                HorizontalOptions="End"
                Text="price #3" />
            <Label
                x:Name="item4"
                Grid.Row="3"
                FontSize="18"
                Text="item #4" />
            <Label
                x:Name="price4"
                Grid.Row="3"
                Grid.Column="1"
                FontSize="18"
                HorizontalOptions="End"
                Text="price #4" />
            <Label
                x:Name="item5"
                Grid.Row="4"
                FontSize="18"
                Text="item #5" />
            <Label
                x:Name="price5"
                Grid.Row="4"
                Grid.Column="1"
                FontSize="18"
                HorizontalOptions="End"
                Text="price #5" />
            <Label
                x:Name="item6"
                Grid.Row="5"
                FontSize="18"
                Text="item #6" />
            <Label
                x:Name="price6"
                Grid.Row="5"
                Grid.Column="1"
                FontSize="18"
                HorizontalOptions="End"
                Text="price #6" />
            <Label
                x:Name="guacamole"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                FontAttributes="Italic"
                FontSize="18"
                HorizontalOptions="End"
                Text="guacamole"
                VerticalOptions="End" />

        </Grid>
    </ScrollView>

</ContentPage>
