<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MathGames.MAUI.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Padding="50" Spacing="25">
        <Label Text="Welcome to Math Games" 
               FontSize="24"
               HorizontalOptions="Center"
               />
        <Label Text="Choose your game mode" 
               FontSize="24"
               HorizontalOptions="Center"
               />
        <Grid ColumnSpacing="10" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Text="Addition" 
                    Clicked="OnMode"/>
            <Button Text="Subtraction" Grid.Column="1" Clicked="OnMode" />
            <Button Text="Multiplication" Grid.Column="2" Clicked="OnMode" />
            <Button Text="Division" Grid.Column="3" Clicked="OnMode" />
            <Button Text="Previous Game" Grid.Row="1" Grid.ColumnSpan="4"
                    BackgroundColor="ForestGreen" Clicked="OnPreviousMode" />
            


        </Grid>
    </VerticalStackLayout>





</ContentPage>
